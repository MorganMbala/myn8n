# Configuration N8N - Version Originale qui Fonctionnait
# Configuration Simple avec SQLite (Pas PostgreSQL)

# N8N Configuration pour Azure Web Apps (ORIGINAL)
N8N_HOST=0.0.0.0
N8N_PORT=8000
N8N_PROTOCOL=https
WEBSITES_PORT=8000

# Azure App Service Configuration (ORIGINAL)
WEBHOOK_URL=https://morgansn8n.azurewebsites.net/
N8N_EDITOR_BASE_URL=https://morgansn8n.azurewebsites.net
N8N_USER_FOLDER=/home/site/wwwroot/.n8n
DB_SQLITE_DATABASE=/home/site/wwwroot/.n8n/database.sqlite
WEBSITES_ENABLE_APP_SERVICE_STORAGE=true

# Security Configuration (ORIGINAL)
N8N_ENCRYPTION_KEY=XYaC1MnldyBKXwatDfkFfetA5do+Fh/VDtWPvh7unQE=
N8N_SECURE_COOKIE=true
N8N_METRICS=false

# Performance Configuration (ORIGINAL - SQLite)
DB_SQLITE_POOL_SIZE=3
N8N_RUNNERS_ENABLED=false
N8N_BLOCK_ENV_ACCESS_IN_NODE=false
N8N_GIT_NODE_DISABLE_BARE_REPOS=true

# Fix OAuth Headers 431 Error
NODE_OPTIONS=--max-http-header-size=32768
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=false
N8N_OAUTH_CALLBACK_URLS=https://morgansn8n.azurewebsites.net