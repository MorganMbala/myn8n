# Configuration N8N pour éliminer les warnings de dépréciation
DB_SQLITE_POOL_SIZE=5
N8N_RUNNERS_ENABLED=true
N8N_BLOCK_ENV_ACCESS_IN_NODE=false
N8N_GIT_NODE_DISABLE_BARE_REPOS=true

# Configuration pour Azure Cloud
N8N_PORT=5678
N8N_HOST=0.0.0.0
N8N_PROTOCOL=https

# Variables Azure (à configurer dans Azure App Service)
# WEBHOOK_URL=https://your-app-name.azurewebsites.net/
# N8N_ENCRYPTION_KEY=your-secret-encryption-key

# Configuration de sécurité pour production
N8N_SECURE_COOKIE=true
N8N_METRICS=true
DB_TYPE=sqlite
